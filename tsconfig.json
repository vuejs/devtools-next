{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@vue-devtools-next/shared": ["./packages/shared/src/index.ts"],
      "@vue-devtools-next/core": ["./packages/core/src/index.ts"],
      "@vue-devtools-next/schema": ["./packages/schema/src/index.ts"],
      "vue-devtools-kit": ["./packages/devtools-kit/src/index.ts"],
      "@vue-devtools-next/ui": ["./packages/ui/src/index.ts"],
      "@vue-devtools-next/ui/theme": ["./packages/ui/theme/index.ts"],
      "@vue-devtools-next/vite": ["./packages/vite/src/index.ts"]
    },
    "resolveJsonModule": true,
    "types": [
      "chrome",
      "vite/client",
      "vitest/globals",
      "@vue-devtools-next/schema"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "exclude": [
    "**/vite/src/overlay/**",
    "**/dist/**",
    "**/node_modules/**",
    "**/**/*.js"
  ]
}
